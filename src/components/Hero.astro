---
import {Image} from 'astro:assets';
import defaultBg from '../assets/hero_cover.jpeg';

interface Props {
    title: string;
    subtitle?: string;
    backgroundImage?: ImageMetadata | string;
}

const {
    title,
    subtitle = "Ihr Partner für Sanitär & Heizung",
    backgroundImage = defaultBg
} = Astro.props;
---

<section class="relative h-[400px] flex items-center justify-center overflow-hidden">

    <div class="absolute inset-0 z-0">
        <Image
                src={backgroundImage}
                alt="Hero Background"
                class="w-full h-full object-cover"
                loading="eager"
                width={1920}
                height={1080}
        />
        <div class="absolute inset-0 bg-slate-900/60"></div>
    </div>

    <div class="relative z-10 text-center container mx-auto px-4">
        <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 drop-shadow-md">
            {title}
        </h1>

        {subtitle && (
                <p class="text-xl md:text-2xl text-slate-200 mb-10 max-w-2xl mx-auto">
                    {subtitle}
                </p>
        )}
    </div>
</section>
