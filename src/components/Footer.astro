---
import { Image } from 'astro:assets';
import logoImage from '../assets/panhey_gmbh_logo.png';
import { NAV_LINKS } from '../consts';
import { url } from '../utils';

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-400 border-t border-slate-800">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 my-4">

            <!-- Spalte 1: Info -->
            <div class="space-y-6">
                <a href={url("/")} class="block">
                    <Image
                            src={logoImage}
                            alt="Panhey Logo"
                            height={48}
                            class="h-10 w-auto brightness-0 invert opacity-80"
                    />
                </a>
                <p class="text-sm leading-relaxed">
                    Ihr Meisterbetrieb für Sanitär, Heizung und Klima in Krefeld.
                    Seit 1967 stehen wir für Qualität und Zuverlässigkeit.
                </p>
            </div>

            <!-- Spalte 2: Kontakt -->
            <div>
                <h3 class="text-white font-bold text-lg mb-3">Kontakt</h3>
                <ul class="space-y-4 text-sm">
                    <li class="flex items-start gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        <span>Donaustraße 26<br>47809 Krefeld</span>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                        <a href="tel:02151540337" class="hover:text-blue-500 transition-colors">02151 540337</a>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-blue-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                        <a href="mailto:panhey@t-online.de" class="hover:text-blue-500 transition-colors">panhey@t-online.de</a>
                    </li>
                </ul>
            </div>

            <!-- Spalte 3: Leistungen -->
            <div>
                <h3 class="text-white font-bold text-lg mb-3">Leistungen</h3>
                <ul class="space-y-3 text-sm">
                    {NAV_LINKS.filter(l => l.href !== '/#kontakt').map(link => (
                            <li>
                                <a href={url(link.href)} class="hover:text-blue-500 transition-colors">
                                    {link.name}
                                </a>
                            </li>
                    ))}
                </ul>
            </div>

            <!-- Spalte 4: Rechtliches -->
            <div>
                <h3 class="text-white font-bold text-lg mb-3">Rechtliches</h3>
                <ul class="space-y-3 text-sm">
                    <li><a href={url("/impressum")} class="hover:text-blue-500 transition-colors">Impressum</a></li>
                    <li><a href={url("/datenschutz")} class="hover:text-blue-500 transition-colors">Datenschutz</a></li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="border-t border-slate-800 pt-4 text-center pb-4 text-xs text-slate-500">
            <p>&copy; {currentYear} Herbert Panhey GmbH. Alle Rechte vorbehalten.</p>
        </div>
    </div>
</footer>
